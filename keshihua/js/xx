  <script>
    // ç¤ºä¾‹æ•°æ®
    const salesData = [
      { rank: 1, province: "æ¹–å—", value: "5000 å•" },
      { rank: 2, province: "å››å·", value: "4500 å•" },
      { rank: 3, province: "å±±ä¸œ", value: "4200 å•" },
      { rank: 4, province: "æ±Ÿè‹", value: "4000 å•" },
    ];
  
    const amountData = [
      { rank: 1, province: "æ¹–å—", value: "10 ä¸‡å…ƒ" },
      { rank: 2, province: "å››å·", value: "9.5 ä¸‡å…ƒ" },
      { rank: 3, province: "å±±ä¸œ", value: "9 ä¸‡å…ƒ" },
      { rank: 4, province: "æ±Ÿè‹", value: "8.8 ä¸‡å…ƒ" },
    ];
  
    let currentData = salesData;
  
    function renderRankingList(data) {
      const rankingList = document.getElementById("rankingList");
      rankingList.innerHTML = data
        .map((item) => {
          const medalClass =
            item.rank === 1
              ? "gold"
              : item.rank === 2
              ? "silver"
              : item.rank === 3
              ? "bronze"
              : "";
          const medal =
            item.rank === 1
              ? "ğŸ¥‡"
              : item.rank === 2
              ? "ğŸ¥ˆ"
              : item.rank === 3
              ? "ğŸ¥‰"
              : `#${item.rank}`;
  
          return `
            <div class="ranking-item">
              <div class="ranking-rank ${medalClass}">${medal}</div>
              <div class="ranking-province">${item.province}</div>
              <div class="ranking-value">${item.value}</div>
            </div>
          `;
        })
        .join("");
    }
  
    function switchRanking(type) {
      currentData = type === "sales" ? salesData : amountData;
      document.getElementById("salesBtn").classList.toggle("active", type === "sales");
      document.getElementById("amountBtn").classList.toggle("active", type === "amount");
      renderRankingList(currentData);
    }
  
    // åˆå§‹åŒ–æ¸²æŸ“
    renderRankingList(currentData);
  
    function loadMore() {
      if (currentData === salesData) {
        salesData.push(
          { rank: salesData.length + 1, province: "æµ™æ±Ÿ", value: "3800 å•" }
        );
      } else {
        amountData.push(
          { rank: amountData.length + 1, province: "æµ™æ±Ÿ", value: "8.5 ä¸‡å…ƒ" }
        );
      }
      renderRankingList(currentData);
    }
  </script>
  
